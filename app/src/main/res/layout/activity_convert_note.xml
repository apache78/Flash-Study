<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.washington.apache78.FlashStudy.activities.ConvertNoteActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteName"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:hint="Note name"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get flash cards"
        android:id="@+id/getFlashCards"
        android:textColor="#FFFFFF"
        android:background="@color/main_app_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="20dp"
        android:id="@+id/noteContentBody"
        android:layout_below="@+id/noteName"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/getFlashCards" />


</RelativeLayout>
